doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
    // FONTS INITIALIZATION
    link(href='https://fonts.googleapis.com/css?family=Ubuntu', rel='stylesheet')
    // END OF FONTS INITIALIZATION
  body
    main#indexVue(role="main" class="container")
      .card-header(style="font-size: 22px; font-family: 'Ubuntu', sans-serif;")
      img(src='./resources/images/yunyon.png')
      | &emsp;Yun-yon Turo-Turo
      span(style='position: absolute; left: 92%')
      .card-body
      .card-title
      section
        table.table#productsTable
          tr
            th ID
            th Product Name
            th Category
            th Price
            th Quantity
            th Action
          tr(v-for="product in products")
            td {{ product.id }}
            td {{ product.productName }}
            td {{ product.category }}
            td {{ product.price }}
            td {{ product.quantity }}
            td
              button(v-on:click="buyProduct(product)") Buy

      i.fa.fa-home.fa-2x.text-primary
      .card-footer.text-muted UnionBank Blockchain Institute

  script(src="/axios.min.js")
  script(src="/vue.js")
  script(src="/index-vue.js")
